<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sing_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:textAlignment="center"
        android:paddingTop="16dp"
        android:text="点歌台"
        android:textSize="18dp"
        android:textColor="@color/White"/>
    <SearchView
        android:id="@+id/search_bar"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:queryHint="输入歌手/歌名"/>
    <RelativeLayout
        android:id="@+id/buttonspace"
        android:layout_below="@id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/White"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/btn_geshou"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/geshou"
                android:layout_marginRight="50dp"/>
            <ImageView
                android:id="@+id/btn_yidian"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/yidian" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/buttonspace"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/remen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/White"
            android:text="热门歌曲"
            android:layout_marginTop="10dp"
            android:paddingTop="12dp"
            android:textAlignment="center"/>
        <View
            android:id="@+id/line"
            android:layout_below="@id/remen"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#90909090" />
        <ListView
            android:id="@+id/songs_container"
            android:background="@color/White"
            android:layout_below="@id/line"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </RelativeLayout>
</RelativeLayout>
